<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <ImageView
        android:id="@+id/img_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_logout"
        />

    <TextView
        android:id="@+id/txt1Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Login"
        android:textSize="18dp"
        android:fontFamily="@font/psemibold"
        />

    <TextView
        android:id="@+id/txt2Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt1Login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Enter your Email and \npassword then let's start gerak"
        android:textSize="12dp"
        android:textAlignment="center"
        android:fontFamily="@font/pmedium"
        />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/pmedium"
        android:background="@drawable/getstarted_bgbutton"
        android:onClick="home"
        />

    <EditText
        android:id="@+id/tbPassword"
        android:inputType="textPassword"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_above="@id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edittext_daftar1"
        android:hint="Password"
        android:paddingLeft="12dp"
        android:textSize="16dp"
        />

    <EditText
        android:id="@+id/tbEmail"
        android:inputType="textEmailAddress"
        android:layout_width="304dp"
        android:layout_height="49dp"
        android:layout_above="@id/tbPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_daftar1"
        android:hint="Email"
        android:paddingLeft="12dp"
        android:textSize="16dp"
        />

</RelativeLayout>