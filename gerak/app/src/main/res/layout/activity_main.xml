<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

    <!--Layout Navigasi-->
    <RelativeLayout
        android:id="@+id/relativelayout3_home"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_menu_bawah">

        <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_chat"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_home"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@id/btnChat"
            android:layout_marginEnd="75dp"
            />

        <ImageButton
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_help"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/btnChat"
            android:layout_marginHorizontal="75dp"
            />

        <TextView
            android:id="@+id/txtChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnChat"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Pesan"
            android:textSize="12dp"
            android:fontFamily="@font/pbold"
            android:textColor="#A5A5A5"
            />

        <TextView
            android:id="@+id/txtHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnChat"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/txtChat"
            android:layout_marginEnd="59dp"
            android:text="Home"
            android:textSize="12dp"
            android:fontFamily="@font/pbold"
            android:textColor="#374E4E"
            />

        <TextView
            android:id="@+id/txtHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnChat"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/txtChat"
            android:layout_marginHorizontal="51.5dp"
            android:text="Bantuan"
            android:textSize="12dp"
            android:fontFamily="@font/pbold"
            android:textColor="#A5A5A5"
            />

    </RelativeLayout>
    <!--Tutup Layout Navigasi-->


</RelativeLayout>